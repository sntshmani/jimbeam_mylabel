  {% if items %}
    {% set ul_class = menu_level == 0 ? 'menu-list--first-level' : 'menu-list--submenu' %}
    {% set directive = menu_level == 0 ? 'v-menuhover' : '' %}
    <ul class="{{ ul_class }}" {{directive}}>
        {% include directory ~ '/themes/custom/beam_theme/templates/menus/common/menu-item.html.twig' %}
    </ul>
  {% endif %}
{% endmacro %}
